@model ChangePofileViewModel
<div class="@(ViewBag.message==null?"":ViewBag.alert)">
    <p>@ViewBag.message</p>
</div>

<div class="tab-content" id="nav-tabContent">
    <div class="tab-pane fade show active" id="list-home" role="tabpanel" aria-labelledby="list-home-list">
        <form asp-controller="Account" asp-action="ChangeProfileSettings" method="post">
            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="@Model.FirstName"></label>
                    <input asp-for="@Model.FirstName" class="form-control">
                    <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="@Model.LastName"></label>
                    <input asp-for="@Model.LastName" class="form-control">
                    <span asp-validation-for="@Model.LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-12">
                    <label asp-for="@Model.ProfileDescription"></label>
                    <textarea style="max-height: 200px;" asp-for="@Model.ProfileDescription"
                        class="form-control"></textarea>
                    <span asp-validation-for="@Model.ProfileDescription" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3">
                <input type="submit" class="btn btn-primary" value="Kaydet">
            </div>

        </form>
    </div>
    <div class="tab-pane fade" id="list-profile" role="tabpanel" aria-labelledby="list-profile-list">...</div>
    <div class="tab-pane fade" id="list-messages" role="tabpanel" aria-labelledby="list-messages-list">...</div>
    <div class="tab-pane fade" id="list-settings" role="tabpanel" aria-labelledby="list-settings-list">...</div>
</div>



<script src="/modules/jquery-validation/dist/jquery.validate.js"></script>
<script src="/modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.js"></script>
