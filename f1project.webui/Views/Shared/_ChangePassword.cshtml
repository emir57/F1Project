@model ChangePassWordViewModel

<div class="tab-content" id="nav-tabContent">
    <div class="tab-pane fade show active" id="list-home" role="tabpanel" aria-labelledby="list-home-list">
        <form asp-controller="Account" asp-action="ChangePassword" method="post">
            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="@Model.OldPassword"></label>
                    <input asp-for="@Model.OldPassword" class="form-control">
                    <span asp-validation-for="@Model.OldPassword" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="@Model.Password"></label>
                    <input asp-for="@Model.Password" class="form-control">
                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="@Model.RePassword"></label>
                    <input asp-for="@Model.RePassword" class="form-control">
                    <span asp-validation-for="@Model.RePassword" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3">
                <input type="submit" class="btn btn-primary" value="Sıfırla">
            </div>

        </form>
    </div>
    <div class="tab-pane fade" id="list-profile" role="tabpanel" aria-labelledby="list-profile-list">...</div>
    <div class="tab-pane fade" id="list-messages" role="tabpanel" aria-labelledby="list-messages-list">...</div>
    <div class="tab-pane fade" id="list-settings" role="tabpanel" aria-labelledby="list-settings-list">...</div>
</div>
</div>



<script src="/modules/jquery-validation/dist/jquery.validate.js"></script>
<script src="/modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.js"></script>
