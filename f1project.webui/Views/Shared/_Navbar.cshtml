<link rel="stylesheet" href="/css/navbar.css" />

<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">PolePosition</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                aria-bd-controls="navbarSupportedContent" aria-bs-expanded="false" aria-bs-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index"><i
                                class="fas fa-home"></i> Anasayfa</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" href="/Takım">Takımlar</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" href="/Pilot">Pilotlar</a>
                    </li>
                </ul>

                @if (User.Identity.IsAuthenticated)
                {

                    <ul class="navbar-nav ml-auto">
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" id="adminpanelBTN">
                                    Admin Panelleri <i class="fas fa-chevron-down"></i></a>
                                <div id="adminPanels">
                                    <div class="list-group">
                                        <a href="/kullanıcılarıdüzenle" type="button" class="list-group-item list-group-item-action">
                                            Kullanıcıları ve rolleri düzenle
                                        </a>
                                        <a href="/postlarıdüzenle" type="button" class="list-group-item list-group-item-action">
                                            Postları düzenle</a>
                                        <a href="/pilotlarıdüzenle" type="button" class="list-group-item list-group-item-action">
                                            Pilotları düzenle</a>
                                        <a href="/takımlarıdüzenle" type="button" class="list-group-item list-group-item-action">
                                            Takımları düzenle</a>
                                        <a href="/ülkeleridüzenle" type="button" class="list-group-item list-group-item-action">
                                            Ülkeleri düzenle</a>
                                        <a href="/resimler" type="button" class="list-group-item list-group-item-action">
                                            Resimleri düzenle</a>
                                        @* <a href="/hesapyonetimi" type="button" class="list-group-item list-group-item-action active">
                                            Hesap Ayarları</a> *@
                                    </div>
                                </div>
                                <script src="/modules/jquery/dist/jquery.min.js"></script>
                                <script>
                                    $(document).ready(function () {
                                        var btn = $("#adminpanelBTN");
                                        var div = $("#adminPanels");
                                        btn.click(function () {
                                            div.slideToggle();
                                        })
                                    })
                                </script>
                            </li>
                        }
                        @if (User.IsInRole("Editör"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" id="adminpanelBTN">
                                    Editör Panelleri <i class="fas fa-chevron-down"></i></a>
                                <div id="adminPanels">
                                    <div class="list-group">
                                        <a href="/postlarıdüzenle" type="button" class="list-group-item list-group-item-action">
                                            Postları düzenle</a>
                                        <a href="/pilotlarıdüzenle" type="button" class="list-group-item list-group-item-action">
                                            Pilotları düzenle</a>
                                        <a href="/takımlarıdüzenle" type="button" class="list-group-item list-group-item-action">
                                            Takımları düzenle</a>
                                        <a href="/resimler" type="button" class="list-group-item list-group-item-action">
                                            Resimleri düzenle</a>
                                        @* <a href="/hesapyonetimi" type="button" class="list-group-item list-group-item-action active">
                                            Hesap Ayarları</a> *@
                                    </div>
                                </div>
                                <script src="/modules/jquery/dist/jquery.min.js"></script>
                                <script>
                                    $(document).ready(function () {
                                        var btn = $("#adminpanelBTN");
                                        var div = $("#adminPanels");
                                        btn.click(function () {
                                            div.slideToggle();
                                        })
                                    })
                                </script>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/hesapyonetimi">
                            Hesap Ayarları</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Account" asp-action="Logout"><i
                                class="fas fa-sign-out-alt"></i> Çıkış Yap</a>
                        </li>
                    </ul>

                }
                else
                {
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/girişyap">Giriş yap</a>
                        </li>
                    </ul>
                }
            </div>
        </div>
    </nav>
</header>
