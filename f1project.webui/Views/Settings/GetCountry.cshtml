@model Country

<a href="/takımlarıdüzenle" class="btn btn-secondary">Geri Dön</a>
<form asp-controller="Settings" asp-action="GetCountry" method="post" enctype="multipart/form-data">
    <input type="hidden" name="Id" value="@Model.CountryId">
    <input type="hidden" name="CountryImageUrl" value="@Model.CountryImageUrl">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="@Model.CountryName"></label><br>
            <input asp-for="@Model.CountryName" class="form-control">
            <span asp-validation-for="@Model.CountryName" class="text-danger"></span>
        </div>
        
    </div>
    
    <img src="/images/@Model.CountryImageUrl" width="200" alt="">
    <div class="input-group mb-3">
        <label class="input-group-text" for="file">Ülke Resmi Yükle</label>
        <input type="file" class="form-control" name="file" id="file">
    </div>
    <div class="row mb-3">

        <div class="col-md-6">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="check" value="">
                <label class="form-check-label" for="check">
                    Değişiklikleri Onaylıyorum
                </label>
            </div>
            <input type="submit" id="submitBtn" value="Değişiklikleri Kaydet" class="btn btn-primary">
            <a asp-action="DeleteCountry" asp-controller="Settings" asp-route-id="@Model.CountryId" onclick="return confirm('Silmek istediğinizden eminmisiniz?')" class="btn btn-danger">Bu Ülkeyi Sil</a>
            
        </div>
    </div>
</form>

@section Scripts
{
<script src="/modules/jquery/dist/jquery.js"></script>
<script src="/modules/jquery-validation/dist/jquery.validate.js"></script>
<script src="/modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.js"></script>
<script>
    $(document).ready(function () {
        var checkbox = $("#check");
        var submitBtn = $("#submitBtn");
        submitBtn.attr("Disabled", true);

        checkbox.change(function(){
            if(this.checked){
                submitBtn.attr("disabled",false);
            }else{
                submitBtn.attr("disabled",true);
            }
        })

    })
</script>
}